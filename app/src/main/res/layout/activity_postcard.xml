<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPostcardBackground"
    android:paddingTop="20dp"
    tools:context="tutorial.android.endava.androidtutorial.chapter_layouts.PostcardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/postcard_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/ic_stamp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="TO: Jane Doe"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM: John Doe"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/postcard_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_stamp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="TO: Jane Doe"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FROM: John Doe"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- top margin -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/postcard_margin_strip_size"
                android:layout_alignParentTop="true"
                android:background="@drawable/postcard_top_bottom" />

            <!-- bottom margin -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/postcard_margin_strip_size"
                android:layout_alignParentBottom="true"
                android:background="@drawable/postcard_top_bottom" />

            <!-- left margin -->
            <View
                android:layout_width="@dimen/postcard_margin_strip_size"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/postcard_right_left" />

            <!-- right margin -->
            <View
                android:layout_width="@dimen/postcard_margin_strip_size"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/postcard_right_left" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/postcard_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_postcard_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_stamp" />

                <TextView
                    android:id="@+id/tv_postcard_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/img_postcard_photo"
                    android:text="TO: Jane Doe"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_postcard_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_postcard_to"
                    android:layout_toRightOf="@+id/img_postcard_photo"
                    android:text="FROM: John Doe"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

            <!-- top margin -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/postcard_margin_strip_size"
                android:layout_alignParentTop="true"
                android:background="@drawable/postcard_top_bottom" />

            <!-- bottom margin -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/postcard_margin_strip_size"
                android:layout_alignParentBottom="true"
                android:background="@drawable/postcard_top_bottom" />

            <!-- left margin -->
            <View
                android:layout_width="@dimen/postcard_margin_strip_size"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/postcard_right_left" />

            <!-- right margin -->
            <View
                android:layout_width="@dimen/postcard_margin_strip_size"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/postcard_right_left" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>
